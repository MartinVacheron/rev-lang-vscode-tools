{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepublish",
            "type": "shell",
            "command": "npm run vscode:prepublish",
            "dependsOn": [
                "compile_server"
            ]
        },
        {
            "label": "compile server",
            "type": "shell",
            "command": "cd ..\rizon-lang-lsp\\; cargo build --release; cd ..\rizon-lang-vscode-tools; cp ..\rizon-lang-lsp\target\release\rizon-lang-lsp.exe server",
        }
    ]
}