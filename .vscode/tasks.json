{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare debug",
            "type": "shell",
            "command": "npm run vscode:prepublish",
            "dependsOn": [
                "compile debug server"
            ]
        },
        {
            "label": "compile debug server",
            "type": "shell",
            "command": "cd ..\\rizon-lsp\\; cargo build; cd ..\\rizon-vscode-tools; cp ..\\rizon-lsp\\target\\debug\\rizon-lsp.exe server"
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "vsce package",
            "dependsOn": [
                "compile server"
            ],
            "problemMatcher": []
        },
        {
            "label": "compile server",
            "type": "shell",
            "command": "cd ..\\rizon-lsp\\; cargo build --release; cd ..\\rizon-vscode-tools; cp ..\\rizon-lsp\\target\\release\\rizon-lsp.exe server"
        }
    ]
}